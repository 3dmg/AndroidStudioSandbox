<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">#ff6addaa</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">#ff393a80</item>
        <!--<item name="android:statusBarColor">#345344</item>-->

        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#ff51ca7c</item>

        <!--<item name="textColorPrimary">#ff141632</item>-->

        <item name="colorControlHighlight">#0000AA</item>

        <!--<item name="navigationBarColor">#ffff68d6</item>-->

        <item name="colorControlNormal">#ffd2d042</item>

        <item name="colorButtonNormal">#ff26ef00</item>

        <!--<item name="colorEdgeEffect">#ffa39216</item>-->

        <!--<item name="statusBarColor">#345344</item>-->

        <!-- Further attributes give fine grained control over colorizing controls, see: colorControlNormal, colorControlActivated, colorControlHighlight, colorButtonNormal, colorSwitchThumbNormal, colorEdgeEffect, statusBarColor and navigationBarColor. -->

        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>

    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="popupTheme">@style/AppTheme.ActionBar.Popup</item>
    </style>

    <!-- Overflow drop down style -->
    <style name="AppTheme.ActionBar.Popup" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="drawer_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#B2B2B2</item>
    </style>

</resources>
